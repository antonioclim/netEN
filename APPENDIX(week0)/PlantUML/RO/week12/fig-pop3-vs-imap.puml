@startuml fig-pop3-vs-imap
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false
title POP3 vs IMAP

package "POP3 :110/995" as pop3 #FFF3E0 {
    card "Descarca + Sterge\nUn singur dispozitiv\nAcces offline\nProtocol simplu" as pop_d
}

package "IMAP :143/993" as imap #E3F2FD {
    card "Sincronizeaza cu server\nDispozitive multiple\nFoldere pe server\nDescarcare partiala" as imap_d
}

legend bottom
POP3: USER, PASS, LIST, RETR, DELE
IMAP: LOGIN, SELECT, FETCH, SEARCH
POP3: stocare locala, banda larga mare
IMAP: stocare server, sincronizare multi-dispozitiv
endlegend
@enduml
