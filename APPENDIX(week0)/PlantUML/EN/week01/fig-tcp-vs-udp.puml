@startuml fig-tcp-vs-udp
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
left to right direction
title TCP vs UDP - Sending "Hello"

package "TCP (7 packets)" as tcp #E3F2FD {
    card "1.SYN" as t1
    card "2.SYN-ACK" as t2
    card "3.ACK" as t3
    card "4.DATA" as t4 #C8E6C9
    card "5.FIN" as t5
    card "6.FIN-ACK" as t6
    card "7.ACK" as t7
}

package "UDP (1 packet)" as udp #FFF3E0 {
    card "1.DATA" as u1 #C8E6C9
}

legend bottom
TCP: Reliable, ordered, connection-oriented
UDP: Fast, no guarantee, connectionless
endlegend
@enduml
