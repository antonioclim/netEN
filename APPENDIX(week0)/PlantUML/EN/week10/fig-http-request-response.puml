@startuml fig-http-request-response
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false
title HTTP Request-Response Structure

package "HTTP Request" as req #E3F2FD {
    card "Request Line\nGET /api/users HTTP/1.1" as rl #BBDEFB
    card "Headers\nHost, Content-Type" as rh #BBDEFB
    card "Body (optional)\nJSON payload" as rb #FFF9C4
}

package "HTTP Response" as res #E8F5E9 {
    card "Status Line\nHTTP/1.1 200 OK" as sl #C8E6C9
    card "Headers\nContent-Type, Length" as sh #C8E6C9
    card "Body\nResponse data" as sbo #FFF9C4
}

legend bottom
Methods: GET, POST, PUT, DELETE, PATCH
Status: 2xx OK, 3xx Redirect, 4xx Client Error, 5xx Server
Headers: Host required in HTTP/1.1
Common: Content-Type, Authorization, Accept
endlegend
@enduml
