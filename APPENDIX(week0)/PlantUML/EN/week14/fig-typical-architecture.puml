@startuml fig-typical-architecture
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
left to right direction
title Typical Network Project Architecture

package "Client Layer" as cli #E3F2FD {
    component "CLI (argparse)" as clii
    component "Tests (pytest)" as test
}

package "Network Layer" as net #FFF3E0 {
    component "Socket Handler" as sock
    component "Protocol Logic" as proto
    component "TLS Wrapper" as tls
}

package "Server Layer" as srv #C8E6C9 {
    component "Listener" as listen
    component "Request Handler" as handler
}

package "Data Layer" as data #FCE4EC {
    component "Storage" as stor
    component "State Manager" as state
}

cli -d-> net
net -d-> srv
srv -d-> data
@enduml
