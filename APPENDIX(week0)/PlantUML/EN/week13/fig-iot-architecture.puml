@startuml fig-iot-architecture
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
title IoT Network Architecture

package "Cloud" as cloud #E3F2FD {
    component "IoT Platform" as plat
    component "Storage" as stor
    component "Analytics" as anal
}

package "Edge" as edge #FFF3E0 {
    component "IoT Gateway\nProtocol translation" as gw
}

package "Devices" as dev #E8F5E9 {
    component "Sensors" as sens
    component "Actuators" as act
    component "Cameras" as cam
}

package "UI" as ui #FCE4EC {
    component "Mobile App" as app
    component "Dashboard" as dash
}

sens -u-> gw : MQTT/Zigbee
act -u-> gw
cam -u-> gw : RTSP
gw -u-> plat : MQTT/HTTPS
plat --> app
plat --> dash

legend bottom
Gateway: protocol bridge, local automation
Cloud: AWS IoT, Azure IoT Hub
Protocols: MQTT, CoAP, HTTP, Zigbee
endlegend
@enduml
