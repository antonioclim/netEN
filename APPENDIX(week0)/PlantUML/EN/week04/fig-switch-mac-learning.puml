@startuml fig-switch-mac-learning
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
title Switch MAC Address Learning

participant "Host A\nMAC:AAAA Port1" as A
participant "Switch\nCAM Table" as S
participant "Host B\nMAC:BBBB Port2" as B
participant "Host C\nMAC:CCCC Port3" as C

A -> S : Frame AAAA->BBBB
S -> B : FLOOD (unknown dest)
S -> C : FLOOD

B -> S : Frame BBBB->AAAA
S -> A : FORWARD Port1 (known)

A -> S : Frame AAAA->BBBB
