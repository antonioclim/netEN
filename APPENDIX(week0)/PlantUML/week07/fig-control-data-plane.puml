@startuml fig-control-data-plane
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
title Control Plane vs Data Plane

package "Control Plane (Brain)" as ctrl #E3F2FD {
    component "Routing Protocols\nOSPF, BGP" as rp
    component "Routing Table" as rt
    component "Topology Discovery" as td
}

package "Data Plane (Muscle)" as data #E8F5E9 {
    component "Forwarding Engine" as fe
    component "FIB Table" as fib
    component "Interface Processing" as ip
}

ctrl -d-> data : Populates FIB

legend bottom
Control: decides WHERE (CPU, slow)
Data: does forwarding (ASIC, fast)
Traditional: both in same device
SDN: control=controller, data=switch
endlegend
@enduml
