@startuml fig-endianness
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false
title Byte Order (Endianness)

package "Big-Endian (Network)" as big #E3F2FD {
    card "Addr0: 0x12" as b0
    card "Addr1: 0x34" as b1
    card "Addr2: 0x56" as b2
    card "Addr3: 0x78" as b3
}

package "Little-Endian (x86)" as little #E8F5E9 {
    card "Addr0: 0x78" as l0
    card "Addr1: 0x56" as l1
    card "Addr2: 0x34" as l2
    card "Addr3: 0x12" as l3
}

legend bottom
Value: 0x12345678
Big: MSB first (network protocols)
Little: LSB first (x86/x64 CPUs)
htons/htonl: host to network
ntohs/ntohl: network to host
struct: ! = network, < = little, > = big
endlegend
@enduml
