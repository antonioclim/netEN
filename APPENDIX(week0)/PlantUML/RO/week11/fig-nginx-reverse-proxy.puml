@startuml fig-nginx-reverse-proxy
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
title Nginx ca Reverse Proxy

package "Clienti" as clients #FFF3E0 {
    component "Client 1" as c1
    component "Client 2" as c2
}

component "Nginx\n:80/:443" as nginx #E3F2FD

package "Backend" as backend #E8F5E9 {
    component "App1 :8080" as app1
    component "App2 :8080" as app2
    component "App3 :8080" as app3
}

c1 -d-> nginx
c2 -d-> nginx
nginx -d-> app1
nginx -d-> app2
nginx -d-> app3

legend bottom
upstream backend { server app1:8080; server app2:8080; }
location / { proxy_pass http://backend; }
Avantaje: terminare SSL, cache, compresie
endlegend
@enduml
