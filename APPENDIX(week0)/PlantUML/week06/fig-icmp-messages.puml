@startuml fig-icmp-messages
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false
title ICMP Message Types

package "Error Messages" as err #FFCDD2 {
    card "Type 3\nDest Unreachable" as t3 #FFEBEE
    card "Type 11\nTime Exceeded" as t11 #FFEBEE
    card "Type 5\nRedirect" as t5 #FFEBEE
}

package "Informational" as info #C8E6C9 {
    card "Type 8\nEcho Request\n(ping)" as t8 #E8F5E9
    card "Type 0\nEcho Reply\n(pong)" as t0 #E8F5E9
}

legend bottom
Dest Unreachable codes:
0=network, 1=host, 3=port, 4=frag needed
traceroute uses TTL exceeded (Type 11)
tcpdump icmp
endlegend
@enduml
