@startuml
skinparam backgroundColor white
skinparam shadowing false
skinparam roundcorner 12
skinparam defaultFontName Arial
skinparam defaultFontSize 14

title Where OSI Layers Are Implemented (indicative)

package "Application" {
  rectangle "L7 Application" as L7
  rectangle "L6 Presentation" as L6
  rectangle "L5 Session" as L5
}

package "Operating System" {
  rectangle "L4 Transport\n(TCP/UDP)" as L4
  rectangle "L3 Network\n(IP)" as L3
}

package "NIC Driver / Hardware" {
  rectangle "L2 Data Link\n(Ethernet/Wi-Fi)" as L2
  rectangle "L1 Physical\n(cable / radio)" as L1
}

L7 -down-> L6
L6 -down-> L5
L5 -down-> L4
L4 -down-> L3
L3 -down-> L2
L2 -down-> L1
@enduml
