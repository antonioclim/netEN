@startuml fig-data-link-sublayers
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
title Substraturi OSI Nivel 2

package "Nivel Legatura Date (L2)" as l2 #F5F5F5 {
    component "LLC\nLogical Link Control\nIEEE 802.2" as llc #BBDEFB
    component "MAC\nMedia Access Control\nIEEE 802.3/802.11" as mac #C8E6C9
}

component "Nivel Fizic (L1)" as l1 #FFE0B2

llc -d-> mac
mac -d-> l1

legend bottom
LLC: control flux, detectie erori, mux
MAC: adresare, delimitare cadru, CSMA
Adresa MAC: 48-bit (6 octeti)
OUI (3B) + NIC ID (3B)
endlegend
@enduml
